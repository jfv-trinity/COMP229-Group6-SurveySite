<%- include('./partials/header.ejs') -%>

<div class="jumbotron" style="background:transparent !important" >
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <img src="/Assets/images/logo.png" />
      </div>
      <div class="col-md-6">
          <br>
          <br>
          <br>
          
          <h2 class="display-4" style="color: #8254ff;">Survey Fox</p></h1>
          
          <section>
              <button class="btn draw-border"><a  href="/survey-list" style="color: #8254ff;">Your Surveys ></a></button>
        
      </div>
      <div class="container"style="text-align:center">
        <div class="row">
          <div class="col-md-offset-1 col-md-12">
            <h3 class="display-10">Active Survey List </h3>
           
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    
                    <th>Take Survey</th>
                    
                    
    
                    </tr>
                  </thead>
                  <tbody>
                  <!-- Template Row -->
                  <% for (let count = 0; count < surveys.length; count++) { %>
                  <tr>
                    <td><%= surveys[count].SurveyName %></td>
                    
                    <td class="text-center">
                        <button class="btn draw-border"><a href="/survey-question/<%= surveys[count]._id %>" >
                        <i class="fas fa-angle-right"></i> Start</i></a></button>
                  </td>
                 
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
             <div class="col-md-offset-1 col-md-10 text-center">
              <ul class="pagination pagination-lg pager" id="myPager"></ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

