<%- include('../partials/header.ejs') -%>


<!-- MAIN CONTENT -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1><br>
            <h3 display-4>Survey Name: <%= survey.SurveyName %></h5>
            <h5 display-4>Survey Testers:  <%= total %></h5>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead>
                    <tr>
                      <th colspan="2"><%= survey.QuestionObject1.Question %></th>
                      </tr>
                    </thead>
                    <tbody>
                    <!-- Template Row -->
                    <% for (let count = 0; count < survey.QuestionObject1.Choices.length; count++) { %>
                    <tr>                
                      <td><%= survey.QuestionObject1.Choices[count] %></td>
                      <td><%= surveyEntry.QuestionResponse[count] %></td>              
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead>
                    <tr>
                      <th colspan="2"><%= survey.QuestionObject2.Question %></th>
                      </tr>
                    </thead>
                    <tbody>
                    <!-- Template Row -->
                    <% for (let count = 0; count < survey.QuestionObject2.Choices.length; count++) { %>
                    <tr>                
                      <td><%= survey.QuestionObject2.Choices[count] %></td>
                      <td><%= surveyEntry.QuestionResponse[survey.QuestionObject1.Choices.length + count] %></td>              
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead>
                    <tr>
                      <th colspan="2"><%= survey.QuestionObject3.Question %></th>
                      </tr>
                    </thead>
                    <tbody>
                    <!-- Template Row -->
                    <% for (let count = 0; count < survey.QuestionObject3.Choices.length; count++) { %>
                    <tr>                
                      <td><%= survey.QuestionObject3.Choices[count] %></td>
                      <td><%= surveyEntry.QuestionResponse[survey.QuestionObject2.Choices.length + survey.QuestionObject2.Choices.length + count] %></td>              
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
               <div class="col-md-offset-1 col-md-10 text-center">
               <ul class="pagination pagination-lg pager" id="myPager"></ul>
               <!-- enable this when the module is working
                <button class="btn btn-primary" type="submit">
                <i class="fas fa-create"></i> Export Survey (csv)</button>
                -->
            </div>
    </div>
</div>
            
        
