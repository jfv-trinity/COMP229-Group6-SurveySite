<%- include('../partials/header.ejs') -%>


<!-- MAIN CONTENT -->


<div class="container">
 
    <div class="row">
      <div class="col-md-offset-1 col-md-12">
        <h3 display-4>Survey List </h3>
        <a href="/survey-create" class="btn btn-primary"><i class="fa fa-plus"></i> Add a survey</a>
        <br>
        <br>
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Start Date</th>
                <th>Expire Date</th>
                <th>Results</th>
                <th>Edit</th>                
                <th>Delete</th>
                <!--incase we need more columns-->
                <!--
                <th class="text-center"></th>
                <th class="text-center"></th>
                -->

                </tr>
              </thead>
              <tbody>
              <!-- Template Row -->
              <% for (let count = 0; count < surveys.length; count++) { %>
              <tr>                
                <td><%= surveys[count].SurveyName %> </td> 
                <td><%= surveys[count].StartDate %> </td>                
                <td><%= surveys[count].ExpireDate %> </td>
                <td class="text-center">
                  <a href="/survey-result/<%= surveys[0]._id%>" class="btn btn-primary btn-sm">
                  <i class="fas fa-pencil-alt"></i> Results</a>
                  </td>
                <td class="text-center">
                  <a href="/survey-edit/<%= surveys[0]._id%>" class="btn btn-primary btn-sm">
                  <i class="fas fa-pencil-alt"></i> Edit</a>
                  </td>
                <td class="text-center">
                  <a href="/survey-delete/<%= surveys[count]._id%>" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
         <div class="col-md-offset-1 col-md-10 text-center">
          <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/bottomnav.ejs') -%>
  <%- include('../partials/footer.ejs') -%>
